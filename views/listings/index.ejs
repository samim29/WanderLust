<% layout("/layouts/boilerplate") %>

<body>
  <style>
    body {
      background: #f8f9fa;
    }
    #filters {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 1rem;
      margin-top: 1rem;
      align-items: center;
      justify-content: center;
    }
    .filter {
      text-align: center;
      margin: 0 1rem 1rem 0;
      opacity: 0.8;
      transition: box-shadow 0.2s, background 0.2s, transform 0.2s;
      background: #fff;
      border-radius: 1rem;
      padding: 0.5rem 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
      min-width: 80px;
    }
    .filter i {
      font-size: 1.7rem;
      margin-bottom: 0.2rem;
      color: #fe424d;
      transition: color 0.2s;
    }
    .filter p {
      font-size: 0.8rem;
      margin-bottom: 0;
      color: #333;
    }
    .filter:hover {
      opacity: 1;
      background: #ffeaea;
      box-shadow: 0 4px 16px rgba(0,0,0,0.12);
      transform: translateY(-2px) scale(1.05);
    }
    .filter:hover i {
      color: #d90429;
    }
    #tax-info{
      display: none;
    }
    .tax-toggle{
      border: 1px solid #fe424d;
      border-radius: 1rem;
      height: 3.25rem;
      width: 14rem;
      /* padding: 0.3rem; */
      margin-left:3rem ;
      display: flex;
      align-items: center;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }
    .listing-card {
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
      margin-bottom: 2rem;
      transition: box-shadow 0.2s, transform 0.2s;
      background: #fff;
      overflow: hidden;
      justify-content: flex-start;
    }
    .tax-toggle .form-check-reverse {
      display: flex;
      align-items: center;
      width: 100%;
    }
    .tax-toggle .form-check-label {
      /* margin-left: 0.7rem; */
      font-size: 1.05rem;
      white-space: nowrap;
      flex: 1;
    }
    .tax-toggle .form-check-input {
      margin-right: 0.7rem;
      margin-left: 0.5rem;
      scale: 1.2;
    }
    .listing-card:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.18);
      transform: translateY(-4px) scale(1.03);
    }
    .listing-link {
      text-decoration: none;
      color: inherit;
    }
    .card-img-top {
      border-top-left-radius: 1rem;
      border-top-right-radius: 1rem;
      object-fit: cover;
    }
    .card-body {
      
      padding: 1.2rem;
    }
    .card-text {
      font-size: 1rem;
      color: #222;
    }
  </style>
    <div id="filters">
      <div class="filter" id="all-filter">
        <div><i class="fa-solid fa-globe"></i></div>
        <p>All</p>
      </div>
      <div class="filter" data-filter="Trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter" data-filter="Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter" data-filter="Iconic Cities">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter" data-filter="Mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter" data-filter="Castles">
        <div><i class="fa-solid fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter" data-filter="Arctic">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter" data-filter="Camping">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter" data-filter="Farms">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter" data-filter="Domes">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter" data-filter="Boats">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
        </div>
      </div>
    </div>
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of allListings){%>
        <a href="/listings/<%=listing._id %>" class="listing-link">
            <div class=" card listing-card col">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body ms-3 mb-1 mt-1" >
                  <p class="card-text">
                  <b><%=listing.title%></b><br>
                  &#8377; <%=listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night <i id="tax-info">&nbsp;&nbsp;+18% GST</i></p> 
                </div>
              </div>
        </a>
 
          <%}%>
    
</div>
  <script>
    // Tax toggle
    let taxToggle = document.getElementById("flexSwitchCheckDefault");
    taxToggle.addEventListener("click", function() {
      if (this.checked) {
        document.querySelectorAll("#tax-info").forEach(function(el) {
          el.style.display = "inline";
        });
      } else {
        document.querySelectorAll("#tax-info").forEach(function(el) {
          el.style.display = "none";
        });
      }
    });

    // Filter icons
    document.querySelectorAll('.filter').forEach(function(filter) {
      filter.addEventListener('click', function() {
        if (this.id === 'all-filter') {
          window.location.href = '/listings';
        } else {
          const filterValue = this.getAttribute('data-filter');
          window.location.href = `/listings?filter=${encodeURIComponent(filterValue)}`;
        }
      });
    });
  </script>
</body>


